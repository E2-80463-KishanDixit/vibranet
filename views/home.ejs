<link rel="stylesheet" href="/css/home_style.css" />

<div id="home">
  <section id="feed-posts">
    <h4>Posts</h4>
    <!------- only authenticated user can see the form -------->
    <% if(locals.user){ %>
        <form action="/posts/create" method="POST" id="new-post-form">
            <textarea
              name="content"
              cols="30"
              rows="4"
              placeholder="Type Here...."
            ></textarea>
            <input type="submit" value="Post" />
          </form>
    <% } %>


    <div id="posts-list-container">
      <ul>
        <% for(post of posts){ %>
        <li>
        <p>
          <%= post.content %>
          <br />
          <% if (post.user) { %>
            <small><%= post.user.email %></small>
          <% } %>
        </p>
        </li>
        <% } %>
      </ul>
    </div>
  </section>
</div>
